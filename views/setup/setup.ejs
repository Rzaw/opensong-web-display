            <button type="button" class="btn btn-secondary control-button" id="next-slide"><i class="fas fa-chevron-right"></i></button>
            <button type="button" class="btn btn-secondary control-button" id="next-section"><i class="fas fa-step-forward"></i></button>
            <button type="button" class="btn btn-secondary control-button" id="last-slide"><i class="fas fa-fast-forward"></i></button>
          </div>
        </div>
      </div>
